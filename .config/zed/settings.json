{
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "dock": "left",
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "autosave": "on_window_change",
  "format_on_save": "on",
  "icon_theme": "Material Icon Theme",
  "terminal": {
    "cursor_shape": "bar"
  },
  "extend_comment_on_newline": false,
  "theme": "Ayu Mirage",
  "when_closing_with_no_tabs": "keep_window_open",
  "buffer_font_family": "MonoLisa",
  "ui_font_family": "MonoLisa",
  "buffer_font_features": {
    "calt": true,
    "liga": true,
    "dlig": true,
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss08": true,
    "ss09": true,
    "ss10": true,
    "ss11": true,
    "ss12": true,
    "ss13": true,
    "ss14": true,
    "ss15": true,
    "ss16": true,
    "ss17": true,
    "ss18": true,
    "ss19": true,
    "ss20": true
  },
  "buffer_font_size": 14,
  "ui_font_size": 17,
  // Finder model width
  "file_finder": {
    "modal_max_width": "medium"
  },
  "tabs": {
    "show_diagnostics": "errors",
    "file_icons": true,
    "git_status": true
  },
  // Indentation, rainbow indentation
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "indent_aware"
  },
  "gutter": {
    "folds": true
  },
  // LSP
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    }
  },
  "languages": {
    "Rust": {
      "enable_language_server": true,
      "language_servers": ["rust-analyzer"]
    },
    "TypeScript": {
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_type_hints": true
      }
    }
  },
  // File syntax highlighting
  // File syntax highlighting
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output"
  ],
  // Turn off telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // Move all panel to the right
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true,
    "hide_root": true,
    "sticky_scroll": true
  },
  "outline_panel": {
    "dock": "left"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  // Move some unnecessary panels to the left
  "notification_panel": {
    "dock": "left"
  }
}
