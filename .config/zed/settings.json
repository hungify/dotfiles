{
  "autosave": "on_window_change",
  "format_on_save": "on",
  "icon_theme": "Material Icon Theme",
  "features": {
    "edit_prediction_provider": "zed"
  },
  // Use Copilot Chat AI as default
  "assistant": {
    "default_profile": "write",
    "profiles": {
      "agent": {
        "name": "Agent",
        "tools": {
          "thinking": true,
          "terminal": true,
          "symbol_info": true,
          "rename": true,
          "regex_search": true,
          "read_file": true,
          "path_search": true,
          "open": true,
          "now": true,
          "move_path": true,
          "list_directory": true,
          "find_replace_file": true,
          "fetch": true,
          "diagnostics": true,
          "delete_path": true,
          "create_file": true,
          "copy_path": true,
          "code_actions": true,
          "code_symbols": true,
          "create_directory": true,
          "batch_tool": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "dock": "left",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "terminal": {
    "cursor_shape": "bar"
  },
  "extend_comment_on_newline": false,
  "theme": "Ayu Mirage",
  "when_closing_with_no_tabs": "keep_window_open",
  "buffer_font_family": "MonoLisa",
  "ui_font_family": "MonoLisa",
  "buffer_font_features": {
    "calt": true,
    "liga": true,
    "dlig": true,
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss08": true,
    "ss09": true,
    "ss10": true,
    "ss11": true,
    "ss12": true,
    "ss13": true,
    "ss14": true,
    "ss15": true,
    "ss16": true,
    "ss17": true,
    "ss18": true,
    "ss19": true,
    "ss20": true
  },
  "buffer_font_size": 14,
  "ui_font_size": 17,
  // Finder model width
  "file_finder": {
    "modal_max_width": "medium"
  },
  "scrollbar": {
    "show": "auto"
  },
  "tabs": {
    "show_diagnostics": "errors",
    "file_icons": true,
    "git_status": true
  },
  // Indentation, rainbow indentation
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "indent_aware"
  },
  "gutter": {
    "enabled": true
  },
  // LSP
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    }
  },
  "languages": {
    "Rust": {
      "enable_language_server": true,
      "language_servers": ["rust-analyzer"]
    },
    "TypeScript": {
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_type_hints": true
      }
    },
    "Python": {
      "format_on_save": { "language_server": { "name": "ruff" } },
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"]
    }
  },
  // File syntax highlighting
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output"
  ],
  // Turn off telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // Move all panel to the right
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "outline_panel": {
    "dock": "left"
  },
  // Move some unnecessary panels to the left
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  }
}
